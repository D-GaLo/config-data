server:
  port: 8080

spring:
  application:
    name: gateway-service  
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true 
      routes:
        - id: product-service
          uri: lb://PRODUCT-SERVICE
          predicates:
            - Path=/product/**
          filters:
            - StripPrefix=1

        - id: invoice-service
          uri: lb://INVOICE-SERVICE
          predicates:
            - Path=/invoice/**
          filters:
            - StripPrefix=1

        - id: auth-service
          uri: lb://SERVICIO-AUTENTICACION
          predicates:
            - Path=/auth/**
          filters:
            - StripPrefix=1

eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka
  instance:
    hostname: localhost